			$("#verificarUsuario").submit(function (e) { 
				e.preventDefault();
				let datos = $('#verificarUsuario').serialize();
				console.log(datos);
				$.ajax({
					type: "POST",
					url: "/verificarUsuario",
					data: datos,
					success: function (response) {
						console.log(response);
						if(response.respuesta === 0){
							Swal.fire('Probblema!','Usario no encontrado!!.','info')
						}
					}
				});
			});
		});
